@model MyCRUD.Models.Libro
@{
	ViewData["Title"] = "Create";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
	<div class="py-5 text-center">
		<h2>Agregar un nuevo libro</h2>
		<span class="lead">formulario para agregar un nuevo libro a la base de datos del sistema</span>
  </div>

	<!-- Formulario -->
	<div class="row">
		<div class="col-8 mx-auto">
			<div class="card">
				<div class="card-body">
					<form method="post" asp-action="Create">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<div class="form-group">
							<label class="control-label" asp-for="Titulo"></label>
							<input asp-for="Titulo" class="form-control" />
							<span asp-validation-for="Titulo" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="control-label" asp-for="Descripcion"></label>
							<input asp-for="Descripcion" class="form-control" />
							<span asp-validation-for="Descripcion" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="control-label" asp-for="FechaLanzamiento"></label>
							<input asp-for="FechaLanzamiento" class="form-control" />
							<span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="control-label" asp-for="Autor"></label>
							<input asp-for="Autor" class="form-control" />
							<span asp-validation-for="Autor" class="text-danger"></span>
						</div>
						<div class="form-group">
							<label class="control-label" asp-for="Precio"></label>
							<input asp-for="Precio" class="form-control" />
							<span asp-validation-for="Precio" class="text-danger"></span>
						</div>
						<div class="form-group d-flex justify-content-end">
							<input type="submit" value="Crear Libro" class="btn btn-primary mx-2" />
							<input type="reset" value="Cancelar" class="btn btn-danger mx-2" />
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts{
	@{ <partial name="_ValidationScriptsPartial" />}
} 
